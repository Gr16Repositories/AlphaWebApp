@page
@using AlphaWebApp.Models.ViewModels;
@model CreateRoleVM
@{
    ViewData["Title"] = "Create New Role";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.RoleName" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="RoleName" class="form-control" autocomplete="roleName" aria-required="true" />
                <label asp-for="RoleName"></label>
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Create Role</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
