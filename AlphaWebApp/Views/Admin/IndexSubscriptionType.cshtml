@model IEnumerable<AlphaWebApp.Models.SubscriptionType>

@{
    ViewData["Title"] = "IndexSubscriptionType";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index SubscriptionType</h1>

<p>
    <a asp-action="CreateSubscriptionType">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                    <a asp-action="EditSubscriptionType" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="DeleteSubscriptionType" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
