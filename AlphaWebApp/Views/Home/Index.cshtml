<!-------------------------- Editor Choice -------------------------->
<div class="col-md-12">
    <h3> <b>| Editor's Choice</b></h3>
    <hr style="height:3px;border-width:0;color:white;background-color:red; opacity:1">

    <div id="editor-choice" class="owl-carousel owl-theme">
        @await Component.InvokeAsync("EditorsChoice")
    </div>
</div>

<!-------------------------- Sports -------------------------->
<div class="col-md-12">
    <h3> <b>| Sport</b></h3>
    <hr style="height:3px; border-width:0; color:white; background-color:#ffff00; opacity:1">


    <div id="sports" class="owl-carousel owl-theme">
        @await Component.InvokeAsync("SportHeadLine")
    </div>
</div>

<!-------------------------- Most-Popular -------------------------->
<div class="col-md-12">
    <h3> <b>| Most-Popular</b></h3>
    <hr style="height:3px; border-width:0; color:white; background-color:orangered; opacity:1">


    <div id="most-popular" class="owl-carousel owl-theme">
        @await Component.InvokeAsync("MostPopular")
    </div>
</div>

<!-------------------------- Weather API -------------------------->
<div class="col-md-4">
    <h3> <b>| WeatherForecast</b></h3>
    <hr style="height:3px; border-width:0; color:white; background-color:orangered; opacity:1">

    @await Component.InvokeAsync("WeatherForeCast" , new {
    City = "Linkoping",
    Lang = "en"}
    )
</div>

<!-------------------------- Stocks Details -------------------------->

<div class="col-md-12">
    <h3> <b>| Stocks Details</b></h3>
    <hr style="height:3px; border-width:0; color:white; background-color:blue; opacity:1">

    <div class="col-md-6">
        <div class="text-dark" style="background-color:cadetblue"><h3><b>UK Stock Details</b></h3></div>
        @await Component.InvokeAsync("Stock" , new {region = "uk"})
    </div>

    <div class="col-md-6">
        <div class="text-dark" style="background-color:coral"><h3><b>US Stock Details</b></h3></div>
        @await Component.InvokeAsync("Stock" , new {region = "us"})
    </div>
</div>



