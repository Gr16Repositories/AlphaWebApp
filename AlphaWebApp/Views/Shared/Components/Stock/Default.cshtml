@model IEnumerable<AlphaWebApp.Models.StockDetails>

<div>
    <marquee direction="left" onmouseover="this.stop();" onmouseout="this.start();" height="60px">

        <a class="stock-scrolling-text">
            <p><b>UK Stocks Details</b></p>
            @foreach (var item in Model)
            {
                @* @if (@item.Name == "Crude Oil" || @item.Name == "Gold" || @item.Name == "Silver" || @item.Name == "EUR/USD" || @item.Name == "10-Yr Bond")
            {*@
                
                <p class="stock-Detail" id="stock-Name"> @item.Name</p>
                <p class="stock-Detail">
                    @item.PrevClose.ToString("0.00")
                </p>
                <p class="stock-Detail">
                    @item.Close.ToString("0.00")
                </p>
                <p p class="stock-Detail-last">
                    @if (@item.PercentChange >= 0)
                    {
                        <i class="fa-solid fa-caret-up text-success"></i>
                        <span>@item.PercentChange.ToString("0.00")%</span>
                    }
                    else
                    {
                        <i class="fa-solid fa-caret-down text-danger"></i>
                        <span>@item.PercentChange.ToString("0.00")%</span>
                    }
                </p>
            }
            @*}*@
        </a>
    </marquee>
</div>




