@model AlphaWebApp.Models.Article
<div class="container-fluid" style="">
    <div class="row">


        <div class="name" style="background-color:blueviolet">


            @Model.Category.name
        </div>
        <div class="card" style="width: 100%; height: 100%">
            <img src="@Model.ImageLink" class="card-img-top" alt="Image" style="padding:1px; object-fit: cover; height: 250px;">
            <div class="card-body d-flex flex-column align-items-start">
                <h5 class="card-title" style="color: #234E70"><b>@Model.HeadLine</b></h5>
                <p style="color:#7A2048;">
                    @Model.ContentSummary
                </p>
                <a asp-controller="Articles" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary d-inline-block mt-auto">Read About Article</a>


@if (Model != null) 
{
    <div class="container-fluid">
        <div class="row"> 
            <div class="name" style="background-color:red">


                          @Model.Category.name

            </div>


                        
                    

        </div>
    </div>
}
</div>
</div>
</div>
</div>