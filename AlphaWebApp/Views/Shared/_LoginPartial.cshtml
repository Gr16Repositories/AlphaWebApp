@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav" >
@if (SignInManager.IsSignedIn(User))
{
        @if (User.IsInRole("Admin"))
        {
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Index">Admin</a>
            </li>
        }
        @if (User.IsInRole("Manager"))
        {
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Manager" asp-action="Index">Manager</a>
            </li>
        }
        @if (User.IsInRole("Editor"))
        {
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Articles" asp-action="Index">Article</a>
            </li>
        }
            <li class="nav-item" >
                <a class="nav-link  text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
            </li>
            <li class="nav-item" >
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link btn btn-link  text-white">Logout</button>
                </form>
            </li>
}
else
{
            <li class="nav-item" >
                   <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </li>
            <li class="nav-item" >
                    <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </li>
}
</ul>
